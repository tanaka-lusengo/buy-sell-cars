{
    "$schema": "https://turborepo.com/schema.json",
    "globalDependencies": [
        "**/.env",
        "**/.env.*local",
        "**/package.json",
        "pnpm-lock.yaml"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["apps/**/package.json", "packages/**/package.json"],
            "outputs": [".next/**", "!.next/cache/**"],
            "env": ["POSTGRES_USER", "POSTGRES_PASSWORD", "POSTGRES_DATABASE", "POSTGRES_HOST", "POSTGRES_URL_NON_POOLING", "POSTGRES_URL", "POSTGRES_PRISMA_URL", "SUPABASE_ANON_KEY", "SUPABASE_URL", "SUPABASE_SERVICE_ROLE_KEY", "SUPABASE_JWT_SECRET", "PAYSTACK_SECRET_KEY_TEST", "PAYSTACK_SECRET_KEY_LIVE", "POSTHOG_PERSONAL_API_KEY"]
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "outputs": []
        },
        "lint": {
            "outputs": []
        },
        "lint:fix": {
            "outputs": []
        },
        "type-check": {
            "outputs": []
        },
        "format": {
            "outputs": []
        },
        "clean-modules": {
            "persistent": true,
            "cache": false,
            "outputs": []
        },
        "clean-next": {
            "persistent": true,
            "cache": false,
            "outputs": []
        },
        "clean": {
            "dependsOn": ["clean-modules", "clean-next"],
            "persistent": true,
            "cache": false,
            "outputs": []
        },
        "test": {
            "dependsOn": ["^test"],
            "outputs": []
        },
        "test:ui": {
            "dependsOn": ["^test:ui"],
            "outputs": []
        },
        "test:coverage": {
            "dependsOn": ["^test:coverage"],
            "outputs": []
        }
    }
}
