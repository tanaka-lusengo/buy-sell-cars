{
  "include": ["./index.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "files": ["./index.ts"],
  "compilerOptions": {
    "target": "ES2017",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "moduleResolution": "bundler"
  }
}
